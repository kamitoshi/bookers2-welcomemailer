<div class="row center padding-top30">
  <div class="col-md-12">
    <%= form_tag(search_path, method: :get) do %>
      <input type="text" placeholder="キーワードを入力" name="word" value="">
      <select name="model">
        <option value="1">Users</option>
        <option value="2">Books</option>
      </select>
      <select name="condition">
        <option value="1">完全一致</option>
        <option value="2">前方一致</option>
        <option value="3">後方一致</option>
        <option value="4">部分一致</option>
      </select>
      <input type="submit" value="検索" class="btn-default">
    <% end %>
  </div>
</div>