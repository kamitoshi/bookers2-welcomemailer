<% if Favorite.find_by(user_id: current_user.id, book_id: book.id) %>
  <% @favorite = Favorite.find_by(user_id: current_user.id, book_id: book.id) %>
  <%= link_to book_favorite_path(book_id: book.id, id: @favorite.id), method: :delete, remote: true do %>
    <i class="fas fa-heart"></i>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book_id: book.id), method: :post, remote: true do %>
    <i class="far fa-heart"></i>
  <% end %>
<% end %>
<%= book.favorites.count %>