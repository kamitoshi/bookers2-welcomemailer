
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @book.user %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
			<tr>
				<td style="width:120px" class="center">
					<%= link_to (@book.user) do %>
					<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg", size: "100x100") %><br>
					<%= @book.user.name %>
					<% end %>
				</td>
				<td style="width:100px"><%= link_to @book.title, @book %></td>
				<td><%= @book.body %></td>
				<td id="favorite-<%= @book.id %>" style="width:50px">
					<%= render "books/favorite",book: @book %>
				</td>
				<% if @book.user == current_user %>
					<td style="width:50px" class="center"><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<td style="width:70px" class="center"><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
				<% end %>
			</tr>
		</table>
		<div class="comment-count">
			<%= render 'comments/count' %>
		</div>
		<hr>
		<div id="comments-area">
			<%= render 'comments/index', comments: @comments %>
		</div>
		<hr>
		<% if user_signed_in? %>
			<div class="comment-create">
				<h3 class="text-left">レビューを投稿する</h3>
				<%= form_for(@comment, url: book_comments_path(@book), remote: true ) do |f| %>
					<%= f.text_area :content, class: "input-mysize form-control" %>
					<%= f.submit "コメントする", class: "btn btn-primary comment-submit float-right right" %>
				<% end %>
			</div>
		<% end %>
		</div>
	</div>
</div>
