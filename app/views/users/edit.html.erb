<div class="row">
	<div class="col-xs-6 col-xs-offset-3">

		<h2>User info</h2>

		<%= form_for(@user) do |f| %>

		<%= render "layouts/error", {text: @user} %>
		<div class="field">
			<%= f.label :name %><br>
			<%= f.text_field :name, class: "name form-control" %>
		</div>

		<div class="field">
			<%= f.label :image %>
			<%= f.attachment_field :profile_image, class: "user_image" %>
		</div>

		<div class="field">
			<%= f.label :introduction %><br>
			<%= f.text_area :introduction, class: "introduction form-control" %>
		</div>

		<div class="actions">
			<%= f.submit "Update User", class: "btn btn-primary" %>
		</div>

		<% end %>
	</div>
</div>