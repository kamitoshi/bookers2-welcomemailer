<div class="row">
  <div class="col-md-12">
    <h1>follower users</h1>
    <% if @user.followed.any? %>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @user.followed.each do |follow| %>
            <% user = User.find(follow.follower_id) %>
            <tr>
              <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
              <td><%= user.name%></td>
              <td>フォロー数：<%= user.follower.count %></td>
              <td>フォロワー数：<%= user.followed.count %></td>
              <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>フォローされていません</p>
    <% end %>
  </div>
</div>