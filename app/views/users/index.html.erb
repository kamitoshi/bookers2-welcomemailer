<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>
		<!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>
	</div>
	<div class="col-xs-9">
		<h2>Users</h2>
		<!--users一覧 -->
		<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th colspan="1"></th>
					<th colspan="1"></th>
					<th colspan="1"></th>
				</tr>
			</thead>

			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
					<td><%= user.name%></td>
					<td><%= link_to "フォロー数：#{user.follower.count}", follows_path(user) %></td>
					<td><%= link_to "フォロワー数：#{user.followed.count}", followers_path(user) %></td>
					<% unless user == current_user %>
						<td>
							<% if current_user.follower.find_by(followed_id: user.id) %>
								<%= link_to "フォローを外す", unfollow_path(user), method: :delete %>
							<% else %>
								<%= link_to "フォローする", follow_path(user), method: :post %>
							<% end %>
						</td>
					<% else %>
					<td colspan="1"></td>
					<% end %>
					<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<!--users一覧 -->
	</div>
</div>
